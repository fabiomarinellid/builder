<div class="container">
    <div class="card card-register mx-auto mt-5">
      <div class="card-header">Criar Uma Conta</div>
        <div class="card-body">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                 <%= render "layouts/shared/error_messages", resource: resource %>
              <div class="form-group">
                <div class="form-label-group">
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", type: "email", class: "form-control", placeholder: "Email", required: "required" %>
                  <%= f.label :email %><br />
                </div>
              </div>
              <div class="form-group">
                <div class="form-row">
                  <div class="col-md-6">
                    <div class="form-label-group">
                      <%= f.password_field :password, autocomplete: "new-password", type: "password", class: "form-control", placeholder: "Password",  required: "required" %>
                      <% if @minimum_password_length %>
                       <%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %>
                      <% end %>
                      <%= f.label :password %>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-label-group">
                      <%= f.password_field :password_confirmation, autocomplete: "new-password", type: "password", class: "form-control", placeholder: "Confirm password",  required: "required" %>
                      <%= f.label :password_confirmation %><br />
                    </div>
                  </div>
                </div>
              </div>
              <%= f.submit "Cadastrar", class: "btn btn-primary btn-block" %>
            <% end %>
          <div class="text-center">
           <%= render "users/shared/links" %>
          </div>
      </div>
    </div>
</div>

